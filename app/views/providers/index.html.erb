<!-- app/views/providers/index.html.erb -->
<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <%= render 'shared/navigation' %>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Manage Providers</h1>
      <p class="mt-2 text-gray-600">Configure and monitor your AI API providers</p>
    </div>
    <!-- Flash Messages -->
    <%= render 'shared/flash_messages' %>
    <!-- Add Provider Form -->
    <div id="provider_form" class="mb-8">
      <%= render "form", provider: @provider, predefined_providers: @predefined_providers %>
    </div>
    <!-- Providers List -->
    <div id="providers" class="bg-white rounded-xl shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Your Providers</h2>
      </div>
      <% if @providers.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">API Endpoint</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <%= render partial: "provider", collection: @providers %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-8 text-center">
          <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No providers configured</h3>
          <p class="text-gray-600">Add your first AI provider using the form above to get started.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>