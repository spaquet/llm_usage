<!-- app/views/providers/_provider.html.erb -->
<tr id="provider_<%= provider.id %>" class="hover:bg-gray-50 transition-colors">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <div class="<%= helpers.provider_icon_class(provider.name) %>">
        <% case provider.name.downcase %>
        <% when /claude|anthropic/ %>
          <svg class="w-5 h-5 <%= helpers.provider_icon_color(provider.name) %>" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z"/>
          </svg>
        <% when /openai|gpt/ %>
          <svg class="w-5 h-5 <%= helpers.provider_icon_color(provider.name) %>" fill="currentColor" viewBox="0 0 24 24">
            <path d="M22.2819 9.8211a5.9847 5.9847 0 0 0-.5157-4.9108 6.0462 6.0462 0 0 0-6.5098-2.9A6.0651 6.0651 0 0 0 4.9807 4.1818a5.9847 5.9847 0 0 0-3.9977 2.9 6.0462 6.0462 0 0 0 .7427 7.0966 5.98 5.98 0 0 0 .511 4.9107 6.051 6.051 0 0 0 6.5146 2.9001A5.9847 5.9847 0 0 0 13.2599 19.7a6.0462 6.0462 0 0 0 4.0028-2.9003 5.98 5.98 0 0 0-.7454-7.0955 5.9847 5.9847 0 0 0 .0027-4.8832Z"/>
          </svg>
        <% when /xai|grok/ %>
          <svg class="w-5 h-5 <%= helpers.provider_icon_color(provider.name) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        <% else %>
          <svg class="w-5 h-5 <%= helpers.provider_icon_color(provider.name) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        <% end %> 0 0 0 .0027-4.8832Z"/>
      </svg>
    <% when /xai|grok/ %>
      <svg class="w-5 h-5 <%= provider_icon_color(provider.name) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
    <% else %>
      <svg class="w-5 h-5 <%= provider_icon_color(provider.name) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
      </svg>
    <% end %>
  </div>
  <div class="ml-4">
    <div class="text-sm font-medium text-gray-900"><%= provider.name %></div>
    <div class="text-sm text-gray-500"><%= provider.description %></div>
  </div>
</div>
</td>
<td class="px-6 py-4 whitespace-nowrap">
  <div class="text-sm text-gray-900"><%= provider.api_url %></div>
  <div class="text-sm text-gray-500">Version: <%= provider.api_version || 'v1' %></div>
</td>
<td class="px-6 py-4 whitespace-nowrap">
  <span class="<%= status_badge_class(provider.status) %>">
    <%= provider.status.humanize %>
  </span>
</td>
<td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-3">
  <%= link_to edit_provider_path(provider), 
        class: "text-blue-600 hover:text-blue-900 transition-colors", 
        data: { turbo_frame: "provider_form" } do %>
    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
    </svg>
    Edit
  <% end %>
  <%= link_to provider_path(provider), 
        class: "text-red-600 hover:text-red-900 transition-colors", 
        data: { 
          turbo_method: :delete, 
          turbo_confirm: "Are you sure you want to delete #{provider.name}? This action cannot be undone." 
        } do %>
    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
    </svg>
    Delete
  <% end %>
</td>
</tr>