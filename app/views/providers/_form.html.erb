<!-- app/views/providers/_form.html.erb -->
<%= turbo_frame_tag "provider_form" do %>
  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h2 class="text-xl font-semibold text-gray-900">
          <%= provider.persisted? ? "Edit Provider" : "Add New Provider" %>
        </h2>
        <p class="text-sm text-gray-600 mt-1">
          <%= provider.persisted? ? "Update your provider configuration" : "Configure a new AI provider to track usage" %>
        </p>
      </div>
      <% if provider.persisted? %>
        <%= link_to providers_path, 
            class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      <% end %>
    </div>
    <%= form_with model: provider, class: "space-y-6", data: { controller: "provider-form" } do |form| %>
      <% if provider.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% provider.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Provider Type Selection -->
        <div class="md:col-span-2">
          <%= form.label :provider_type, "Provider Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :provider_type, 
              options_for_select(predefined_providers.map { |key, value| [key, key] }, provider.provider_type), 
              { include_blank: "Select a provider type" }, 
              { 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors",
                data: { action: "change->provider-form#toggleKeyField" }
              } %>
        </div>
        <!-- Provider Name -->
        <div>
          <%= form.label :name, "Provider Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors", 
              placeholder: "e.g., My Claude API" %>
          <p class="mt-1 text-xs text-gray-500">A friendly name to identify this provider</p>
        </div>
        <!-- Status (for existing providers) -->
        <% if provider.persisted? %>
          <div>
            <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :status, 
                options_for_select([
                  ['Active', 'active'],
                  ['Inactive', 'inactive'],
                  ['Suspended', 'suspended']
                ], provider.status), 
                {}, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors" } %>
          </div>
        <% end %>
        <!-- Description -->
        <div class="md:col-span-2">
          <%= form.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors", 
              rows: 3, 
              placeholder: "Describe how you use this provider..." %>
        </div>
        <!-- API Key Field -->
        <div data-provider-form-target="keyField" class="md:col-span-2 <%= 'hidden' unless provider.provider_type.present? %>">
          <%= form.label :api_key, "API Key", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= form.password_field :api_key, 
                class: "w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors", 
                placeholder: "Enter your API key" %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </div>
          </div>
          <p class="mt-1 text-xs text-gray-500">Your API key will be encrypted and stored securely</p>
        </div>
        <!-- API Secret Field (hidden by default, for future use) -->
        <div data-provider-form-target="secretField" class="md:col-span-2 hidden">
          <%= form.label :api_secret, "API Secret", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :api_secret, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-colors", 
              placeholder: "Enter your API secret" %>
        </div>
      </div>
      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <div class="text-sm text-gray-500">
          <% unless provider.persisted? %>
            All fields marked with * are required
          <% end %>
        </div>
        <div class="flex space-x-3">
          <% if provider.persisted? %>
            <%= link_to providers_path, 
                class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
              Cancel
            <% end %>
          <% end %>
          <%= form.submit(
                provider.persisted? ? "Update Provider" : "Add Provider", 
                class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors cursor-pointer"
              ) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>